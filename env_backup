CI_ENVIRONMENT = development   # ou "production" se estiver em produção

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

# Se for utilizar uma base URL diferente
app.baseURL = 'http://localhost/projetophp/public'

# Se você quer forçar solicitações seguras globais (por exemplo, HTTPS)
app.forceGlobalSecureRequests = false

# Content Security Policy - se não for usar, pode manter como "false"
app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

# Aqui você configura a conexão com o banco de dados PostgreSQL
database.default.hostname = localhost
database.default.database = projetophp    # Nome do seu banco de dados
database.default.username = seu_usuario  # Seu usuário do PostgreSQL
database.default.password = sua_senha   # Sua senha do PostgreSQL
database.default.DBDriver = Postgre     # Configurado para PostgreSQL
database.default.DBPrefix =             # Prefixo, se necessário
database.default.port = 5432            # A porta do PostgreSQL (geralmente 5432)

